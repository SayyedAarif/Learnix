<script>
  // Function to toggle the mobile menu
  function toggleMenu(){
    const navLinks = document.getElementById('navLinks');
    navLinks.classList.toggle('menu-open');
  }

  // Function to toggle the theme (updated to change the icon as well)
  function toggleTheme(){
    const docEl = document.documentElement;
    const iconEl = document.getElementById('theme-icon');
    const currentTheme = docEl.getAttribute("data-theme");

    if(currentTheme === "dark"){
      docEl.setAttribute("data-theme","light");
      iconEl.textContent = 'üåô'; // Moon for dark mode toggle
    } else {
      docEl.setAttribute("data-theme","dark");
      iconEl.textContent = '‚òÄÔ∏è'; // Sun for light mode toggle
    }
  }

  // Set initial icon based on default theme
  window.onload = function() {
      const docEl = document.documentElement;
      const iconEl = document.getElementById('theme-icon');
      const initialTheme = docEl.getAttribute("data-theme") || 'light'; 
      if (iconEl) {
        iconEl.textContent = (initialTheme === "dark") ? '‚òÄÔ∏è' : 'üåô';
      }
  };
</script>

