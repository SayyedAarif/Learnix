<script>
  function toggleMenu(){
    document.getElementById('navLinks').classList.toggle('menu-open');
  }
  function toggleTheme(){
    const doc = document.documentElement;
    const icon = document.getElementById('theme-icon');
    const theme = doc.getAttribute('data-theme');
    if(theme === 'dark'){doc.setAttribute('data-theme','light');icon.textContent='ðŸŒ’';}
    else{doc.setAttribute('data-theme','dark');icon.textContent='ðŸŒ”';}
  }
  window.onload = ()=>{
    const doc = document.documentElement;
    const icon = document.getElementById('theme-icon');
    icon.textContent = doc.getAttribute('data-theme')==='dark'?'ðŸŒ”':'ðŸŒ’';
  };
</script>
